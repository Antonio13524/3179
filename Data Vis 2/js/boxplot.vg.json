{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 1000,
    "height": 500,
    "title": {
        "text": "Distribution of Prices by Property Type",
         "fontSize": 20},

    "data": {"url": "https://raw.githubusercontent.com/Antonio13524/3179/main/Week%209%20Homework/data/out.csv"},

    "params" : [ { "name" : "Region_selection" , 
    "bind" : { 
        "input" : "select" , 
        "options" : [ 
            null , 
            "Eastern Metropolitan" , 
            "Eastern Victoria" ,
            "Northern Metropolitan" , 
            "Northern Victoria" , 
            "South-Eastern Metropolitan" , 
            "Southern Metropolitan" ], 
            "labels" :[ 
            "Show All" , 
            "Eastern Metropolitan" , 
            "Eastern Victoria" ,
            "Northern Metropolitan" , 
            "Northern Victoria" , 
            "South-Eastern Metropolitan" , 
            "Southern Metropolitan" ], 

            "name" : "Region Selection: " }
         },
         {
            "name": "median_house_price",
            "value": {
                "aggregate": "median",
                "field": "Price"
            }
         }
        ],
    "transform": [
        {"filter": "Region_selection == null || datum.Regionname == Region_selection" }
    ],
    
    "layer":[
        {
            "mark": {
                "type": "boxplot",
                "extent": 1.5
                },
            "encoding": {
            "y": {"field": "Type"},
            "x": {
                "field": "Price",
                "type": "quantitative"
                },
                "tooltip": [
                    {"field": "Suburb", "type": "nominal"},
                    {"field": "Price", "type": "quantitative", "format": "$,"},
                    {"field": "Rooms", "type": "ordinal"}
                  ]
                }
        },
        {
            "mark": "rule",
            "encoding": {
                "x": {
                "aggregate": "median",
                "field": "Price",
                "type": "quantitative"
                },
                "color": {"value": "red"},
                "size": {"value": 3}
            }
        },
        {
            "mark": {"type": "text",
                     "dy": -25,
                     "dx": 85},
            "encoding": {
                "text":{ "value": "Victorian Median Price"},
                "x": {
                    "aggregate": "median",
                    "field": "Price",
                    "type": "quantitative"
                },
                "color": {"value": "black"},
                "size": {"value": 14}
            }
        }


    ]
    

}

