{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {"url": "https://raw.githubusercontent.com/Antonio13524/3179/main/Data%20Vis%202/data/bed_bath.csv"},
    "title": "Median Price vs Number of Bedrooms and Bathrooms",
    "mark": "rect",
    "width": "container",
    "height": 400,
    "encoding": {
      "x": {
        "bin": {"maxbins": 12},
        "field": "Bedroom",
        "type": "quantitative",
        "axis": {
            "tickCount": 12,
            "tickBand": "center",
            "title": "Bedrooms",
            "titleFontSize": 16
        }
      },
      "y": {
        "field": "Bathroom",
        "type": "ordinal",
        "sort": "descending",
        "axis": {
            "tickBand": "extent",
            "title": "Bathrooms",
            "titleFontSize": 16
        }
      },
      "color": {
        "field":"Median_Price",
        "type": "quantitative",
        "legend": {
            "title": "Median Price ($)"
        }
      },
      "tooltip": [
        {"field": "Bedroom", "type": "nominal"},
        {"field": "Bathroom", "type": "nominal"},
        {"field": "number", "type": "quantitative", "title": "Number of Properties"}
      ]
    },
    "config": {
      "view": {
        "stroke": "transparent"
      }
    }
  }